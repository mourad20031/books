# Remove .html extensions
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Force HTTPS and non-www
RewriteCond %{HTTP_HOST} ^www\.freeebooks\.online [NC]
RewriteRule ^(.*)$ https://freeebooks.online/$1 [L,R=301]

RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://freeebooks.online/$1 [L,R=301]




<IfModule mod_headers.c>
    # Cache video and audio files for 1 year
    <FilesMatch "\.(mp4|mp3|webm|ogg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache images for 1 year
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache CSS/JS for 1 year
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>
